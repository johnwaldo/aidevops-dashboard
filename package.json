{
  "name": "aidevops-dashboard",
  "version": "1.3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n server,client -c cyan,magenta \"bun run server:dev\" \"bun run client:dev\"",
    "server:dev": "bun --watch server/index.ts",
    "client:dev": "cd client && bun run dev --port 5173",
    "build": "cd client && bun run build",
    "start": "bun server/index.ts",
    "server:only": "bun --watch server/index.ts",
    "test": "bun test",
    "typecheck": "cd client && bun run typecheck",
    "lint": "cd client && bun run lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
